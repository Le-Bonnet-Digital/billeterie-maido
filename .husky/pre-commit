#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

export PATH="$PWD/node_modules/.bin:$PATH"

BRANCH="$(git rev-parse --abbrev-ref HEAD)"

# Ne pas bloquer main (mais lancer qualitÃ© si dispo)
if [ "$BRANCH" = "main" ]; then
    npm run -s lint && npm run -s validate:backlog && npm test && lint-staged
  
  exit $?
fi

STAGED="$(git diff --cached --name-only)"
ALLOW_EMPTY_SPRINT=${ALLOW_EMPTY_SPRINT:-0}
if [ "$1" = "--allow-empty-sprint" ]; then
  ALLOW_EMPTY_SPRINT=1
fi

if [ "$ALLOW_EMPTY_SPRINT" -eq 0 ]; then
  DOCS_ONLY=1
  for f in $STAGED; do
    case "$f" in
      *.md|*.markdown|*.mdx|*.txt|*.yaml|*.yml|docs/*)
        ;;
      *)
        DOCS_ONLY=0
        break
        ;;
    esac
  done
  if [ "$DOCS_ONLY" -eq 1 ]; then
    echo "ğŸ“ Commit docs-only dÃ©tectÃ© : vÃ©rifications sprint allÃ©gÃ©es."
    ALLOW_EMPTY_SPRINT=1
  fi
fi

if [ "$ALLOW_EMPTY_SPRINT" -eq 1 ]; then
  command -v git-secrets >/dev/null 2>&1 && git-secrets --scan
  lint-staged
  exit $?
fi

# 1) Sprint courant = dernier dossier docs/sprints/S<N>/
SPRINT_DIR="$(ls -d docs/sprints/S*/ 2>/dev/null | sort -V | tail -n1)"
if [ -z "$SPRINT_DIR" ]; then
  echo "âŒ Aucun sprint trouvÃ© (docs/sprints/S<N>/)." >&2
  exit 1
fi
SNAME="${SPRINT_DIR%/}"
SNAME="${SNAME##*/}"
SN="${SNAME#S}"
echo "ğŸ§­ Sprint courant: $SNAME"

# 2) Artefacts requis (existence fichiers)
REQ="PLAN.md BOARD.md DEMO.md REVIEW.md RETRO.md PREFLIGHT.md INTERACTIONS.yaml"
for f in $REQ; do
  if [ ! -f "$SPRINT_DIR$f" ]; then
    echo "âŒ Fichier manquant: $SPRINT_DIR$f" >&2
    exit 1
  fi
done

# 3) INTERACTIONS.yaml doit Ãªtre stagÃ© et contenir le bon topic
if ! git diff --cached --name-only | grep -q "^${SPRINT_DIR}INTERACTIONS.yaml$"; then
  echo "âŒ ${SPRINT_DIR}INTERACTIONS.yaml doit Ãªtre mis Ã  jour et 'staged' avant le commit." >&2
  exit 1
fi
if ! grep -E "topic:.*Sprint S${SN}" -q "${SPRINT_DIR}INTERACTIONS.yaml"; then
  echo "âŒ ${SPRINT_DIR}INTERACTIONS.yaml doit contenir 'topic: Sprint S${SN} â€” â€¦'." >&2
  exit 1
fi

# 4) PREFLIGHT minimal: Code audit + DB audit + RefreshedAt|unchanged
PREF="${SPRINT_DIR}PREFLIGHT.md"
grep -qi "Code audit" "$PREF" || { echo "âŒ PREFLIGHT.md: section 'Code audit' manquante." >&2; exit 1; }
grep -qi "DB audit" "$PREF"   || { echo "âŒ PREFLIGHT.md: section 'DB audit' manquante." >&2;   exit 1; }
( grep -q "RefreshedAt" "$PREF" || grep -qi "unchanged" "$PREF" ) || {
  echo "âŒ PREFLIGHT.md: prÃ©ciser 'schema.sql RefreshedAt (ISO)' ou justifier 'unchanged'." >&2; exit 1;
}

# 5) Si migrations STAGÃ‰ES â†’ exiger schema.sql stagÃ© OU justification 'unchanged'
if echo "$STAGED" | grep -Eq '^(supabase/migrations/|Infrastructure/.*/Migrations/|migrations/)'; then
  if ! echo "$STAGED" | grep -q '^schema.sql$'; then
    if ! grep -qi "unchanged" "$PREF"; then
      echo "âŒ Migrations modifiÃ©es mais 'schema.sql' non mis Ã  jour et PREFLIGHT sans justification 'unchanged'." >&2
      exit 1
    fi
  fi
  echo "â„¹ï¸ Des migrations sont prÃ©sentes dans le commit. ChatGPT ne les applique pas."
  echo "   âœ Applique-les manuellement aprÃ¨s merge (ex: supabase db reset/apply, EF Core update, etc.)."
fi

# 6) SÃ©curitÃ© & qualitÃ© locales
command -v git-secrets >/dev/null 2>&1 && git-secrets --scan
npm run -s lint && npm run -s validate:backlog && npm test && lint-staged
